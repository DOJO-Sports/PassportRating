            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, oct 1"
                android:id="@+id/todaydate"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:text="Monday"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <GridLayout
                    android:id="@+id/monlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="4"
                    android:orientation="horizontal"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tuet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:text="Tuesday"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <GridLayout
                    android:id="@+id/tueslay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:columnCount="4"
                    android:orientation="horizontal"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/wedt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:text="Wednesday"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <GridLayout
                    android:id="@+id/wedlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:columnCount="4"
                    android:orientation="horizontal"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/thurst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:text="Thursday"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <GridLayout
                    android:id="@+id/thurslay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:columnCount="4"
                    android:orientation="horizontal"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/frit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:text="Friday"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <GridLayout
                    android:id="@+id/frilay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:columnCount="4"
                    android:orientation="horizontal"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/satt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:text="Saturday"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <GridLayout
                    android:id="@+id/satlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:columnCount="4"
                    android:orientation="horizontal"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/sunt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="20dp"
                    android:text="Sunday"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:visibility="gone" />

                <GridLayout
                    android:id="@+id/sunlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:columnCount="4"
                    android:orientation="horizontal"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About the Studio"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"/>

            <RelativeLayout
                android:background="@drawable/white_stroke_bg"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="75dp"
                    android:layout_height="90dp"
                    android:layout_alignParentStart="true"
                    android:src="#e7e6ea"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"/>

                <TextView
                    android:id="@+id/assetName"
                    android:layout_width="195dp"
                    android:letterSpacing="0.01"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/img"
                    android:textColor="#000"
                    android:text=""
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="13dp"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_below="@id/assetName"
                    android:layout_width="195dp"
                    android:letterSpacing="0.03"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/img"
                    android:textColor="#878787"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="13dp"/>

                <RelativeLayout
                    android:id="@+id/toMap"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="17dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgEnd"
                        android:layout_centerHorizontal="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/map"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/imgEnd"
                        android:layout_centerHorizontal="true"
                        android:textColor="#6E6E6E"
                        android:text=""
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Similar Activities"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:id="@+id/recyclerView"/>

            <RelativeLayout
                android:id="@+id/toMessageActivity"
                android:background="@drawable/white_stroke_bg"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <ImageView
                    android:id="@+id/image"
                    android:src="@drawable/issue"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"/>

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/image"
                    android:textColor="#878787"
                    android:text="Have any issue?"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="18dp"
                    android:layout_marginStart="15dp"/>

                <TextView
                    android:id="@+id/text2"
                    android:layout_below="@id/text1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/image"
                    android:textColor="#878787"
                    android:text="Report here"
                    android:textSize="13sp"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="15dp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:src="@drawable/right_arrow"/>

            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:elevation="10dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/credit"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:text="23 Credit"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="30dp"
            android:textSize="23sp"
            android:gravity="center"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/reserveBtn"
            android:layout_margin="15dp"
            android:layout_width="215dp"
            android:layout_height="match_parent"
            android:text="Reserve"
            android:textSize="22sp"
            android:clickable="true"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/black"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</RelativeLayout>