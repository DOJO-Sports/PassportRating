<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewDetail"
    android:background="@color/white"
    tools:context=".ViewDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="412dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:id="@+id/activityName1"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:paddingStart="13dp"
                    android:paddingEnd="13dp"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:text="Tennis"
                    android:textColor="#878787"
                    android:textSize="18sp"
                    android:background="@drawable/activity_name_bg"
                    android:layout_margin="20dp"/>

                <Button
                    android:id="@+id/share"
                    android:drawableStart="@drawable/ic_outline_share"
                    android:text="Share"
                    android:textSize="17sp"
                    android:textAllCaps="false"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:paddingStart="7dp"
                    android:paddingEnd="7dp"
                    android:background="@drawable/activity_name_bg"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="20dp"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/activityName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tennis"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="#878787"
                android:layout_marginStart="15dp"
                android:layout_marginTop="2dp"/>

            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today, oct 1"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginTop="4dp"/>

