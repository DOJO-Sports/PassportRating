<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReviewActivity">
    <RelativeLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:elevation="5dp"
        android:layout_alignParentTop="true"
        android:layout_height="60dp"
        >
        <ImageView
            android:id="@+id/backBtn"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_width="23dp"

            android:layout_height="23dp"/>
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"
            android:text="Review your experience"
            android:textColor="@color/black"
            android:textSize="23sp" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@drawable/white_stroke_bg"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:src="#e7e6ea"
            android:layout_margin="7dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/assetName"
            android:layout_width="195dp"
            android:letterSpacing="0.01"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img"
            android:textColor="#000"
            android:text="Tennis"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="17dp"
            android:layout_marginStart="13dp"/>

        <TextView
            android:id="@+id/address"
            android:layout_below="@id/assetName"
            android:layout_width="195dp"
            android:letterSpacing="0.03"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img"
            android:textColor="#000"
            android:text="DOJO 1 Knockout Martial Art"
            android:textSize="12sp"
            android:layout_marginStart="13dp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address"
            android:layout_centerHorizontal="true"
            android:textColor="#878787"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/img"
            android:text="Booked on March 20"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginStart="13dp"
            />

        <RelativeLayout
            android:id="@+id/toMap"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="17dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgEnd"
                android:layout_centerHorizontal="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_forward"/>



        </RelativeLayout>

    </RelativeLayout>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:theme="@style/RatingBar"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:layout_width="match_parent"
        android:textColor="#878787"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:text="Tap the stars to rate"></TextView>
    <TextView
        android:layout_width="195dp"
        android:letterSpacing="0.01"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Write a review"
        android:textStyle="bold"
        android:layout_marginBottom="22dp"
        android:textSize="17sp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="13dp"/>
    <EditText
        android:id="@+id/comment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="start"
        android:layout_margin="13dp"
        android:background="@drawable/white_stroke"></EditText>
<Button
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Submit"
    android:textAllCaps="false"
    android:layout_margin="15dp"
    android:textColor="@color/white"
    android:background="@drawable/curved_green_bg"
    ></Button>
</LinearLayout>