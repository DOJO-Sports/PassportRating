<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/close"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_close"/>

    <ImageView
        android:id="@+id/img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/tennis_small"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/close"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:text="Tennis"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text2"
        android:layout_below="@id/text1"
        android:layout_marginTop="3dp"
        android:text="Tennis"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text3"
        android:layout_below="@id/text2"
        android:layout_marginTop="3dp"
        android:text="Time"
        android:layout_centerHorizontal="true"
        android:textColor="#878787"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/bookingId"
        android:layout_below="@id/text3"
        android:layout_marginTop="13dp"
        android:text="Booking id: 45513596268"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:textSize="21sp"
        android:gravity="center"
        android:background="@drawable/grey_stroke_bg"
        android:layout_width="wrap_content"
        android:layout_height="60dp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookingId">

        <RadioButton
            android:id="@+id/radioBtn1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:button="@null"
            android:checked="true"
            android:text="Want to book another activity"
            android:textSize="18sp"
            android:background="@drawable/white_stroke_bg"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:drawableEnd="?android:attr/listChoiceIndicatorSingle"/>

        <RadioButton
            android:id="@+id/radioBtn2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:button="@null"
            android:text="Booking created by mistake"
            android:textSize="18sp"
            android:background="@drawable/white_stroke_bg"
            android:layout_below="@id/radioBtn1"
            android:paddingStart="15dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="15dp"
            android:drawableEnd="?android:attr/listChoiceIndicatorSingle"/>

        <RadioButton
            android:id="@+id/radioBtn3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:button="@null"
            android:text="Other"
            android:textSize="18sp"
            android:background="@drawable/white_stroke_bg"
            android:layout_below="@id/radioBtn2"
            android:paddingStart="15dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="15dp"
            android:drawableEnd="?android:attr/listChoiceIndicatorSingle"/>

    </RadioGroup>

    <Button
        android:id="@+id/cancelBookingBtn"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:text="cancel this booking"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/red_btn"
        android:layout_below="@id/radioGroup"/>

</RelativeLayout>